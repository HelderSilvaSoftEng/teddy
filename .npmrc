# Force pnpm as the package manager for this project
# This prevents accidental use of npm or yarn which can corrupt the lockfile

engine-strict = true
auto-install-peers = true
strict-peer-dependencies = false

# Store configuration
store-dir = .pnpm-store

# Performance
prefer-offline = false
fetch-timeout = 60000

# Monorepo
recursive-install = true
shared-workspace-lockfile = true
