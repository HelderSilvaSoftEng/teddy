{
  "info": {
    "_postman_id": "auth-test-collection",
    "name": "Teddy Auth Testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. LOGIN",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"joao@example.com\",\"password\":\"senha123\"}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/auth/login",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "2. GET /api/v1/clients (Bearer Token)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/v1/clients",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "v1", "clients"]
        }
      },
      "response": []
    },
    {
      "name": "3. GET /api/v1/clients (Via Cookie)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/v1/clients",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "v1", "clients"]
        }
      },
      "response": []
    },
    {
      "name": "4. GET /api/auth/me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/auth/me",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "auth", "me"]
        }
      },
      "response": []
    },
    {
      "name": "5. POST /api/auth/refresh",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/auth/refresh",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "auth", "refresh"]
        }
      },
      "response": []
    },
    {
      "name": "6. POST /api/auth/logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/auth/logout",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "auth", "logout"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ]
}
