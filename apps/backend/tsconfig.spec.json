{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/spec",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "files": ["src/test-setup.ts"],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "__tests__/**/*.spec.ts"
  ]
}
