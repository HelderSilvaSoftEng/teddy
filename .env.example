# =============================================================================
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# =============================================================================

# =============================================================================
# üîê JWT & Authentication
# =============================================================================
# Access Token expires in 1 hour (3600 seconds)
JWT_SECRET=your_jwt_secret_key_change_in_production_at_least_32_characters_long
JWT_EXPIRATION=3600

# Refresh Token expires in 7 days (604800 seconds)
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_in_production_at_least_32_characters_long
REFRESH_TOKEN_TTL=604800

# =============================================================================
# üóÑÔ∏è Database (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=teddy_db

# =============================================================================
# üåê Application
# =============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# =============================================================================
# üìä Observability
# =============================================================================
LOG_LEVEL=debug
OTEL_ENABLED=false

# Jaeger Configuration (only if OTEL_ENABLED=true)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
